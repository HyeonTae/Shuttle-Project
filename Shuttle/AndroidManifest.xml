        <activity
            android:name=".home.SearchForCheonAnActivity"
            android:label="@string/title_activity_search_for_cheon_an" >
        </activity>
        <activity
            android:name=".home.SearchForTerminalActivity"
            android:label="@string/title_activity_search_for_terminal" >
        </activity>
        <activity
            android:name=".smu.SearchFromAsanActivity"
            android:label="@string/title_activity_search_form_asan" >
        </activity>
        <activity
            android:name=".smu.SearchFromTerminalActivity"
            android:label="@string/title_activity_search_from_terminal" >
        </activity>
        <activity
            android:name=".smu.SearchFromCheonAnActivity"
            android:label="@string/title_activity_search_from_cheon_an" >
        </activity>
        <activity
            android:name=".home.GoHomeActivity"
            android:label="@string/title_activity_go_home" >
        </activity>
        <activity
            android:name=".smu.GoSMUActivity"
            android:label="@string/title_activity_go_smu" >
        </activity>
    </application>

</manifest>
